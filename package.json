{
  "name": "pgk-construction",
  "version": "1.0.0",
  "description": "PGK Construction - Complete Construction Project Management System",
  "private": true,
  "dependencies": {
    "@react-three/drei": "^9.56.24",
    "@react-three/fiber": "^8.12.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "framer-motion": "^12.23.24",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "lucide-react": "^0.554.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "react-toastify": "^11.0.5",
    "three": "^0.150.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "dev": "vite",
  "build": "vite build",
  "preview": "vite preview",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/**/*.{js,jsx,json,css,md}",
    "build:production": "npm run build && npm run test",
    "deploy": "npm run build && echo 'Build completed. Ready for deployment.'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.8",
    "source-map-loader": "^4.0.1"
  },
  "keywords": [
    "construction",
    "project-management",
    "react",
    "threejs",
    "construction-tracking",
    "expense-management",
    "client-management"
  ],
  "author": "PGK Construction",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/pgk-construction.git"
  },
  "homepage": ".",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
